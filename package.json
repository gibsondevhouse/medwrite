{
  "name": "medwrite",
  "version": "1.0.0",
  "description": "Local-first Markdown Medium editor. Stack: Electron, React, Vite, Tailwind, TipTap. Arch: Strict Shell/Core separation with granular component isolation to prevent monolithic routing. Features: Headless \"Zen\" UI, local persistence, slash commands, bubble-menu formatting, direct .md export, drag/drop Base64 image handling. Optimized for modularity.",
  "main": "dist-electron/main.cjs",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && electron-builder",
    "preview": "vite preview",
    "electron:dev": "vite",
    "electron:build": "vite build && electron-builder"
  },
  "build": {
    "appId": "com.medwrite.app",
    "productName": "MedWrite",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.18",
    "@tailwindcss/typography": "^0.5.19",
    "@types/node": "^25.0.3",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "autoprefixer": "^10.4.23",
    "electron": "^39.2.7",
    "electron-builder": "^26.4.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6"
  },
  "dependencies": {
    "@tiptap/extension-bubble-menu": "^3.15.3",
    "@tiptap/extension-image": "^3.15.3",
    "@tiptap/extension-placeholder": "^3.15.3",
    "@tiptap/react": "^3.15.3",
    "@tiptap/starter-kit": "^3.15.3",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "tiptap-markdown": "^0.9.0"
  }
}
